# Discord Bot Configuration
CLIENT_TOKEN=your_discord_bot_token_here
CLIENT_ID=your_discord_client_id_here

# Optional: Command Deployment Guild ID
# Set this to deploy commands to a specific guild for faster testing
# Leave empty to deploy globally (takes up to 1 hour to propagate)
COMMAND_GUILD_ID=

# Optional: Birthday Feature
# Set this to enable birthday announcements in a specific channel
BIRTHDAY_CHANNEL_ID=

# Optional: Weekly Recap Feature
# Set this to enable automatic weekly recap messages every Sunday at midnight
RECAP_CHANNEL_ID=

# Optional: Gemini AI Integration
# Required for AI-powered message responses
GEMINI_API_KEY=

# Web Dashboard Configuration
WEB_PORT=3000
SESSION_SECRET=change_this_to_a_random_secret
DISCORD_CLIENT_SECRET=your_discord_client_secret_here
CALLBACK_URL=http://localhost:3000/auth/callback

# Optional: Guild Fetch Timeout (milliseconds)
# Timeout for fetching user's Discord servers during OAuth login and refresh
# Default: 10000 (10 seconds). Increase if you experience timeout issues.
# GUILD_FETCH_TIMEOUT_MS=10000

# Production Configuration
# NODE_ENV=production
# REDIS_URL=redis://localhost:6379 (required for production session store)
# ALLOWED_ORIGINS=https://yourdomain.com (comma-separated list for CORS)

# For production, change CALLBACK_URL to your domain:
# CALLBACK_URL=https://yourdomain.com/auth/callback
